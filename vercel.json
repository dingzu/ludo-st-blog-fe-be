{
  "version": 2,
  "name": "ludost-blog-frontend",
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/dist/$1"
    }
  ],
  "functions": {
    "apps/frontend/dist/**": {
      "maxDuration": 10
    }
  },
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_UPLOAD_URL": "@vite_upload_url"
  }
}
