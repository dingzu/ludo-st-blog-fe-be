{
  "name": "@ludost/database",
  "version": "1.0.0",
  "description": "Database models and migrations for Ludost Blog",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "migrate": "node scripts/migrate.js",
    "migrate:production": "NODE_ENV=production node scripts/migrate.js",
    "seed": "node scripts/seed.js",
